    <div class="alert" id="alertBox">TU PEDIU PRA FICAR FEIO, AGORA AGUENTA!</div>

    <audio id="annoyingSound" loop>
        <source src="https://www.myinstants.com/media/sounds/rickroll.mp3" type="audio/mpeg">
    </audio>

    <script>
        function goInsane() {
            let alertBox = document.getElementById('alertBox');
            alertBox.style.display = 'block';
            setTimeout(() => alertBox.style.display = 'none', 2000);
            let audio = document.getElementById('annoyingSound');
            audio.play();
            document.body.style.background = `url('https://media.giphy.com/media/26FPy3QZQqGtDcrja/giphy.gif') repeat`;
            for (let i = 0; i < 10; i++) {
                let gif = document.createElement('img');
                gif.src = 'https://media.giphy.com/media/l0Iyl55kTeh71nTWw/giphy.gif';
                gif.className = 'gif';
                gif.style.top = Math.random() * 80 + '%';
                gif.style.left = Math.random() * 80 + '%';
                document.querySelector('.gif-container').appendChild(gif);
            }
        }

        document.addEventListener('mousemove', () => {
            document.body.style.backgroundColor = `#${Math.floor(Math.random()*16777215).toString(16)}`;
            let gifs = document.querySelectorAll('.gif');
            gifs.forEach(gif => {
                gif.style.transform = `translate(${Math.random()*100}px, ${Math.random()*100}px)`;
            });
        });

        setInterval(() => {
            document.querySelector('h1').style.color = `#${Math.floor(Math.random()*16777215).toString(16)}`;
        }, 500);
    </script>
</body>
