#!/bin/bashclearecho "HSProxy - Menu"echo "----------------------"echo "1) Iniciar Proxy"echo "2) Iniciar Proxy SSL"echo "3) Configurações"echo "4) Sair"echo "----------------------"read -p "Escolha uma opção: " choicecase $choice in    1)        echo "Iniciando o Proxy..."        /opt/hsproxy/proxy        ;;    2)        echo "Iniciando o Proxy SSL..."        /opt/hsproxy/sslproxy        ;;    3)        echo "Abrindo configurações..."        # Coloque o comando de configurações aqui se necessário        ;;    4)        echo "Saindo..."        exit 0        ;;    *)        echo "Opção inválida"        ;;esac